<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemKonser"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/ic_launcher_background"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">
        <ImageView
            android:id="@+id/imgBand"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:scaleType="centerCrop"
            android:src="@drawable/waipu"/>
        <TextView
            android:id="@+id/txtTglKonser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:lineHeight="28sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textSize="20sp"

            />
        <TextView
            android:id="@+id/txtKotaKonser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="20sp"

            />
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            app:strokeWidth="@dimen/mtrl_btn_stroke_size"
            app:cardElevation="0dp"
            app:cardCornerRadius="4dp"
            app:strokeColor="@color/mtrl_btn_stroke_color_selector"
            app:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/mtrl_btn_padding_left"
                android:paddingTop="12dp"
                android:paddingRight="@dimen/mtrl_btn_padding_right"
                android:paddingBottom="12dp">
                <TextView
                    android:id="@+id/txtHargaKonser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harga"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.0892857143"
                    android:textAllCaps="true"
                    android:textColor="@color/design_default_color_primary"
                    android:textSize="16sp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</LinearLayout>